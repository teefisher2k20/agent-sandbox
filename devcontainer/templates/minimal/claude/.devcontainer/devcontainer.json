{
  "name": "Claude Code Sandbox",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": ["--cap-add=NET_ADMIN", "--cap-add=NET_RAW"],
  "customizations": {
    "vscode": {
      "settings": {
        "remote.autoForwardPorts": false,
        "remote.forwardOnOpen": false,
        "remote.autoForwardPortsSource": "output",
        "terminal.integrated.defaultProfile.linux": "zsh"
      }
    }
  },
  "remoteUser": "dev",
  "mounts": [
    // Persist Claude credentials across rebuilds
    "source=claude-state-${devcontainerId},target=/home/dev/.claude,type=volume",
    // Persist shell history
    "source=claude-history-${devcontainerId},target=/commandhistory,type=volume",
    // Inject host Claude config (optional - comment out if not needed)
    "source=${localEnv:HOME}/.claude/CLAUDE.md,target=/home/dev/.claude/CLAUDE.md,type=bind,readonly",
    "source=${localEnv:HOME}/.claude/settings.json,target=/home/dev/.claude/settings.json,type=bind,readonly"
  ],
  "containerEnv": {
    "TZ": "${localEnv:TZ:America/Los_Angeles}",
    "CLAUDE_CONFIG_DIR": "/home/dev/.claude"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace",
  "postStartCommand": "sudo /usr/local/bin/init-firewall.sh",
  "waitFor": "postStartCommand"
}
