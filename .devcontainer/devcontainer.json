{
  "name": "Agent Sandbox Development",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "TZ": "${localEnv:TZ:America/Los_Angeles}",
      "CLAUDE_CODE_VERSION": "latest",
      "GIT_DELTA_VERSION": "0.18.2",
      "ZSH_IN_DOCKER_VERSION": "1.2.0"
    }
  },
  "runArgs": ["--cap-add=NET_ADMIN", "--cap-add=NET_RAW"],
  "customizations": {
    "vscode": {
      "extensions": [],
      "settings": {
        "remote.autoForwardPorts": false,
        "remote.forwardOnOpen": false,
        "remote.autoForwardPortsSource": "output",
        "security.promptForRemoteFileProtocolHandling": true,
        "terminal.integrated.defaultProfile.linux": "zsh"
      }
    }
  },
  "remoteUser": "dev",
  "mounts": [
    // Per-project bash history (named volume)
    "source=claude-code-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    // Per-project .claude state (named volume)
    "source=claude-code-config-${devcontainerId},target=/home/dev/.claude,type=volume",
    // Convenience: Host claude.md injected into the volume path
    "source=${localEnv:HOME}/.claude/CLAUDE.md,target=/home/dev/.claude/CLAUDE.md,type=bind,readonly"
  ],
  "containerEnv": {
    "CLAUDE_CONFIG_DIR": "/home/dev/.claude",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace",
  "postStartCommand": "sudo /usr/local/bin/init-firewall.sh",
  "waitFor": "postStartCommand"
}
